<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join"
    android:background="@color/login_background"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <EditText
        android:id="@+id/user_password"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/login_edittext"
        android:hint="비밀번호를 입력해 주세요."
        android:inputType="textPassword"
        android:textSize="15sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/join_text1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="특수문자 포함 8자 이상 입력해 주세요."
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/user_password2"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/login_edittext"
        android:hint="다시 한 번 입력해 주세요."
        android:inputType="textPassword"
        android:textSize="15sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/join_text2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="두 비밀번호가 일치하지 않습니다."
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/join"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button"
        android:text="회원가입"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/join_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 시 이용약관 정책과 개인정보 보호정책에 동의하는 것으로 간주합니다."
        android:textSize="10sp"
        android:visibility="gone"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <EditText
        android:id="@+id/user_email"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/login_edittext"
        android:hint="이메일 주소를 입력해 주세요."
        android:textSize="15sp"
        android:inputType="textEmailAddress"/>
    <Button
        android:id="@+id/user_email_next"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_blank_button"
        android:clickable="false"
        android:text="계속하기"
        android:textSize="15sp"/>
</LinearLayout>

</FrameLayout>